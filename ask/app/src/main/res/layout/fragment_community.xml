<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="커뮤니티"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="10dp"

        android:orientation="horizontal">

        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="자동차"
            android:textColor="@color/black"
            android:textSize="12dp"
            app:backgroundTint="#bed4ff"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="엔터테인먼트"
            android:textSize="12dp"
            android:textColor="@color/black"
            app:backgroundTint="#fffbc8"></Button>

        <Button
            android:layout_width="47dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="IT"
            android:textSize="12dp"
            android:textColor="@color/black"
            app:backgroundTint="#beffd6"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/black"
            android:text="전자제품"
            android:textSize="12dp"
            app:backgroundTint="#ffd5f4"></Button>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/mypage_recent_achivement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#f1f9ff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/community_univ_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="대학별 게시판"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/community_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="만두만두"
                    android:textColor="@color/black"
                    android:textSize="14dp" />


                <TextView
                    android:id="@+id/community_univ_contents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="가천대 학우 여러분은 어디에"
                    android:textColor="#888888"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/community_univ_go"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    app:srcCompat="@mipmap/baseline_play_arrow_black_48"
                    app:tint="#888888" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/frameLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#f1f9ff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/communitiy_favorite_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="관심종목 게시판"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/star1"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    app:srcCompat="@mipmap/baseline_star_black_48"
                    app:tint="#FFFF00" />

                <TextView
                    android:id="@+id/stock1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:text="카카오"
                    android:textColor="@color/black"
                    android:textSize="14dp" />


                <TextView
                    android:id="@+id/stock1_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="14층 어떡할까요 ㅜㅜ"
                    android:textColor="#888888"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/community_favorite_go1"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    app:srcCompat="@mipmap/baseline_play_arrow_black_48"
                    app:tint="#888888" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/star2"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    app:srcCompat="@mipmap/baseline_star_black_48"
                    app:tint="#FFFF00" />

                <TextView
                    android:id="@+id/stock2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="삼성전자"
                    android:textColor="@color/black"
                    android:textSize="14dp" />


                <TextView
                    android:id="@+id/stock2_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="7만전자                         "
                    android:textColor="#888888"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/community_favorite_go2"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    app:srcCompat="@mipmap/baseline_play_arrow_black_48"
                    app:tint="#888888" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/frameLayout5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#f1f9ff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/community_ask_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="ASK"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/community_ask_coin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C 500"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/community_ask_question"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="질문제목"
                        android:textColor="@color/black"
                        android:textSize="14dp" />


                    <ImageView
                        android:id="@+id/community_ask_go"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        app:srcCompat="@mipmap/baseline_play_arrow_black_48"
                        app:tint="#888888" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/community_ask_content"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="1질문 내용입니다. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est eopksio laborum.Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est eopksio laborum.Excepteur sint occaecat cupidatat non proident,
                        sunt in culpa qui officia deserunt mollit anim id est eopksio laborum.Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est eopksio laborum."
                        android:textColor="#888888"
                        android:textSize="14dp" />


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>




    </LinearLayout>


</LinearLayout>